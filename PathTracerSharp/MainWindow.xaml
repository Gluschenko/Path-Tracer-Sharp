<Window x:Class="PathTracerSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathTracerSharp"
        mc:Ignorable="d"
        Title="Path Tracer" Width="640" Height="480">
    <Grid Background="#00FF00">
        <Image x:Name="Image" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <Grid x:Name="SidePanel" Visibility="Hidden" Width="200" HorizontalAlignment="Right" Background="White">
            <ScrollViewer>
                <ListBox x:Name="LogList">
                    <ListBoxItem>123</ListBoxItem>
                    <ListBoxItem>123</ListBoxItem>
                    <ListBoxItem>123</ListBoxItem>
                    <ListBoxItem>123</ListBoxItem>
                </ListBox>
            </ScrollViewer>
        </Grid>
        <Button Content="MENU" Width="40" Height="40" Margin="10"  
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Click="ShowHideButton_Click"></Button>
    </Grid>
</Window>
